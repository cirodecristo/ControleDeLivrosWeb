@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-boarded table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nome da Categoria
            </th>
            <th>
                Ordem de visualização
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Nome
                </td>
                <td width="30%">
                    @obj.OrdemMostra
                </td>
            </tr>
        }
    </tbody>

</table>

