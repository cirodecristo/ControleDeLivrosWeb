@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Index";
}


<partial name="_Notificacoes" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Categoria" asp-action="Criar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Criar nova categoria
            </a>
        </div>
    </div>
    <br /> <br />

<table class="table table-boarded table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nome da Categoria
            </th>
            <th>
                Ordem de visualização
            </th>
            <th>

            </th>
                <th>

                </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Nome
                </td>
                <td width="30%">
                    @obj.OrdemMostra
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Categoria" asp-action="Editar" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Editar</a>
                        
                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Categoria" asp-action="Deletar" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-pencil-square"></i>Deletar</a>

                        </div>
                    </td>
            </tr>
        }
    </tbody>

</table>

